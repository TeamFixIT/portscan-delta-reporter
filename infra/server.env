SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True
SQLALCHEMY_DATABASE_URI='sqlite:////app/data/app.db'
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MySQL: mysql+pymysql://user:password@localhost/dbname

# Session
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS

# OAuth Settings
# OAUTH2_PROVIDERS=microsoft,github

# Microsoft Entra ID OAuth
# MICROSOFT_CLIENT_ID=
# MICROSOFT_CLIENT_SECRET=
# MICROSOFT_TENANT_ID=

# Google OAuth
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@example.com

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Rate Limiting (optional)
RATELIMIT_ENABLED=False
RATELIMIT_STORAGE_URL=memory://

# Security Headers (production)
SECURITY_HSTS_ENABLED=False  # Set to True in production with HTTPS

# Application
APP_NAME=Port Scanner Delta Reporter
