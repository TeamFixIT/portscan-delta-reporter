# .env.example
FLASK_ENV=production
FLASK_APP=run.py

# Server
HOST=0.0.0.0
PORT=5000

# Database
SQLALCHEMY_DATABASE_URI=sqlite:///data/app.db
# For production: postgresql://user:pass@host/dbname

# Security
SECRET_KEY=change-me-to-a-random-50-char-string
SECURITY_PASSWORD_SALT=another-random-salt

# Azure Entra ID (Azure AD) Configuration
# ENTRA_CLIENT_ID=
# ENTRA_CLIENT_SECRET=
# ENTRA_TENANT_ID=

# Email (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password