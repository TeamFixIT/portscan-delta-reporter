{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Server",
      "type": "shell",
      "command": "cd server && ./setup_server.sh",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Setup Client",
      "type": "shell",
      "command": "cd client && ./setup_client.sh",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Server",
      "type": "shell",
      "command": "cd server && ./start_server.sh",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Running on.*|.*Scheduler started.*"
        }
      }
    },
    {
      "label": "Start Client",
      "type": "shell",
      "command": "cd client && sudo ./start_client.sh",
      "windows": {
        "command": "powershell",
        "args": [
          "-Command",
          "cd client && Start-Process './start_client.sh' -Verb RunAs"
        ]
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Client registered.*|.*Waiting for approval.*"
        }
      }
    },
    {
      "label": "Start Server & Client",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Start Server",
        "Start Client"
      ],
      "problemMatcher": []
    },
    {
      "label": "Clean Install Server",
      "type": "shell",
      "command": "cd server && rm -rf venv build dist *.egg-info migrations data instance && ./setup_server.sh",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Clean Install Client",
      "type": "shell",
      "command": "cd client && rm -rf venv build dist *.egg-info && ./setup_client.sh",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}