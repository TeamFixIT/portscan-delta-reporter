{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Server",
      "type": "shell",
      "command": "./setup.sh",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "panel": "new"
      }
    },
    {
      "label": "Setup Client",
      "type": "shell",
      "command": "./setup.sh",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": "build",
      "presentation": {
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "Start Server",
      "type": "shell",
      "command": "./venv/Scripts/python.exe",
      "args": ["run.py"],
      "windows": {
        "command": "./venv/Scripts/python.exe"
      },
      "linux": {
        "command": "./venv/bin/python"
      },
      "osx": {
        "command": "./venv/bin/python"
      },
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "dedicated"
      },
      "isBackground": false
    },
    {
      "label": "Start Client",
      "type": "shell",
      "command": "./venv/Scripts/python.exe",
      "args": ["client_agent.py"],
      "windows": {
        "command": "./venv/Scripts/python.exe"
      },
      "linux": {
        "command": "./venv/bin/python"
      },
      "osx": {
        "command": "./venv/bin/python"
      },
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "dedicated"
      },
      "isBackground": false,
      "dependsOn": ["Setup Client"]
    },
    {
      "label": "Start All Services",
      "dependsOrder": "parallel",
      "dependsOn": ["Setup Server", "Start Client"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Reset Database",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source venv/bin/activate && export FLASK_APP=run.py && flask db downgrade base && flask db upgrade"
      ],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Drops all tables and re-initializes the database using migrations."
    },
    {
      "label": "Initial DB Setup",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source venv/bin/activate && export FLASK_APP=run.py && flask db init && flask db migrate -m 'Initial migration' && flask db upgrade && flask create-admin"
      ],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Initializes migrations, applies them, and creates admin user."
    },
    {
      "label": "DB Migration",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "source venv/bin/activate && export FLASK_APP=run.py && flask db migrate && flask db upgrade"
      ],
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Run migration and upgrade to update DB during development."
    }
  ]
}
