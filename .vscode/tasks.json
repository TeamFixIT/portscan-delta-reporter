{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup Server Environment",
      "type": "shell",
      "command": "./setup.sh",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Create virtual environment and install server dependencies"
    },
    {
      "label": "Setup Client Environment",
      "type": "shell",
      "command": "./setup.sh",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Create virtual environment and install client dependencies"
    },
    {
      "label": "Start Server",
      "type": "shell",
      "command": "source venv/bin/activate && python run.py",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Running on.*$",
          "endsPattern": "^.*Restarting with.*$"
        }
      },
      "detail": "Start the Flask development server"
    },
    {
      "label": "Start Client",
      "type": "shell",
      "command": "source venv/bin/activate && python client_agent.py",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": [],
      "detail": "Start the scanning client agent"
    },
    {
      "label": "Install Server Dependencies",
      "type": "shell",
      "command": "source venv/bin/activate && pip install -r requirements.txt",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Install Python dependencies for server"
    },
    {
      "label": "Install Client Dependencies",
      "type": "shell",
      "command": "source venv/bin/activate && pip install -r requirements.txt",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Install Python dependencies for client"
    },
    {
      "label": "Initialize Database",
      "type": "shell",
      "command": "source venv/bin/activate && python run.py init-db",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Initialize the database with tables"
    },
    {
      "label": "Reset Database",
      "type": "shell",
      "command": "source venv/bin/activate && python run.py reset-db",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Reset the database (drop and recreate all tables)"
    },
    {
      "label": "Run Server Tests",
      "type": "shell",
      "command": "source venv/bin/activate && python -m pytest tests/",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": [],
      "detail": "Run server unit tests with pytest"
    },
    {
      "label": "Run Client Tests",
      "type": "shell",
      "command": "source venv/bin/activate && python -m pytest tests/",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated"
      },
      "problemMatcher": [],
      "detail": "Run client unit tests with pytest"
    },
    {
      "label": "Docker: Start Services",
      "type": "shell",
      "command": "docker-compose up -d",
      "options": {
        "cwd": "${workspaceFolder}/infra"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Start all services using Docker Compose"
    },
    {
      "label": "Docker: Stop Services",
      "type": "shell",
      "command": "docker-compose down",
      "options": {
        "cwd": "${workspaceFolder}/infra"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Stop all Docker services"
    }
  ]
}
